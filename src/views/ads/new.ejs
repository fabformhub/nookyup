<%- include("../partials/header", { title }) %>

<div class="max-w-3xl mx-auto py-12 px-6">

  <h1 class="text-3xl font-bold mb-8 text-pink-300 tracking-tight">
    Create Ad in <%= location.city_name %>
  </h1>

  <!-- Location + Category Info -->
  <div 
    class="
      nookyup-hover
      mb-10 p-6 rounded-xl
      bg-slate-900/40 border border-slate-800/60 backdrop-blur-xl
      text-slate-300 space-y-1

      transition-all duration-500
      hover:scale-[1.02]
      hover:border-pink-500/70
      hover:shadow-[0_0_35px_rgba(236,72,153,0.6)]
    "
  >
    <p><strong class="text-pink-300">Country:</strong> <%= country %></p>
    <p><strong class="text-pink-300">City:</strong> <%= location.city_name %></p>
    <p><strong class="text-pink-300">Category:</strong> <%= category.name %></p>

    <% if (subcategory) { %>
      <p><strong class="text-pink-300">Subcategory:</strong> <%= subcategory.name %></p>
    <% } %>
  </div>

  <!-- Form -->
  <form 
    action="/<%= country %>/<%= city %>/<%= category.slug %>/<%= subcategory ? subcategory.slug : '' %>/ads/new" 
    method="POST"
    class="
      nookyup-hover
      p-8 rounded-2xl
      bg-slate-900/40 border border-slate-800/60 backdrop-blur-xl
      text-slate-200 space-y-6

      transition-all duration-500
      hover:scale-[1.02]
      hover:border-pink-500/70
      hover:shadow-[0_0_45px_rgba(236,72,153,0.6)]
    "
  >
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <!-- Title -->
    <div class="flex flex-col gap-2">
      <label class="text-pink-300 font-medium tracking-wide">Title</label>
      <input 
        type="text" 
        name="title" 
        required
        class="
          w-full px-4 py-3 rounded-lg
          bg-slate-900/60 border border-slate-700 text-slate-200
          focus:border-pink-500 focus:ring-2 focus:ring-pink-500/40
          transition-all duration-300
        "
      >
    </div>

    <!-- Body -->
    <div class="flex flex-col gap-2">
      <label class="text-pink-300 font-medium tracking-wide">Body</label>
      <textarea 
        name="body" 
        required
        class="
          w-full h-40 px-4 py-3 rounded-lg
          bg-slate-900/60 border border-slate-700 text-slate-200
          focus:border-pink-500 focus:ring-2 focus:ring-pink-500/40
          transition-all duration-300
        "
      ></textarea>
    </div>

    <!-- Hidden fields -->
    <input type="hidden" name="category_slug" value="<%= category.slug %>">
    <% if (subcategory) { %>
      <input type="hidden" name="subcategory_slug" value="<%= subcategory.slug %>">
    <% } %>

    <!-- Submit Button -->
    <button 
      type="submit"
      class="
        nookyup-hover
        w-full mt-4 px-6 py-3 rounded-lg text-lg font-medium
        text-pink-300 border border-pink-500/40
        bg-slate-900/40 backdrop-blur-xl
        transition-all duration-500
        hover:scale-[1.05]
        hover:border-pink-500/80
        hover:text-pink-200
        hover:shadow-[0_0_25px_rgba(236,72,153,0.5)]
      "
    >
      Save Draft
    </button>

  </form>

</div>

<%- include("../partials/footer") %>

